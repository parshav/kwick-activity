<idea-plugin>
    <id>com.pv.kwick.activity</id>
    <name>kwick Activity</name>
    <vendor email="parshav@live.com" url="http://www.yourcompany.com">pv</vendor>

    <description>
        Plugin that displays the current Android activity running with a popup balloon.
    </description>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->

    <depends>com.intellij.modules.lang</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>

    <idea-version since-build="173"/>

    <actions>
        <!-- Add your actions here -->
        <action
            id="kwick.action.activity"
            class="ActivityAction"
            text="kwick Activity"
            description="Print the current activity">
            <add-to-group
                group-id="ToolsMenu"
                anchor="last"/>
        </action>
    </actions>
</idea-plugin>